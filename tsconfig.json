{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "resources/scripts/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "resources/scripts/shims-tsx.d.ts",
        "resources/scripts/shims-vue.d.ts",
        "resources/scripts/shims-window.d.ts",
        "resources/scripts/**/*.vue",
        "resources/scripts/**/*",
        "resources/scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}